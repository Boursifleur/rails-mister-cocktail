
<div class="container h-200 w200">

  <h4> <%= @cocktail.name %> </h4>

<div class="card-product">
 <%= cl_image_tag @cocktail.photo.key, alt: "alttext" %>
  <div class="card-product-infos">
    <% @cocktail.doses.each do |dose| %>
    <div class="row">
      <p><%= dose.description %> of <p>
      <p> <%= dose.ingredient.name%> </p>
      <br>
      <p> <%= link_to "Destroy", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"}   %></p>
    </div>
    <% end %>
  </div>
</div>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "Back to all cocktails", cocktails_path %>

</div>

