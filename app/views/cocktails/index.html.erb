<div class="container mt-5 d-block">
  <div class="col-12 text-center pb-5">
    <h1> Noble cocktails</h1>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-4 ">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="boxcard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')"  >
          <h4>  <%= cocktail.name %> </h4>

        </div>
        <% end %>
    </div>
    <% end %>
  </div>

<div class="button-cocktail mt-10">
    <%= link_to "add new cocktail", new_cocktail_path %>
</div>

</div>


